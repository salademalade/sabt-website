{
  "hosting": [
    {
      "target": "sabt-website",
      "public": "dist/sabt-website/browser",
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        },
        {
          "source": "!**/.@(js|css|ico|png)",
          "destination": "/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "storage": {
      "port": 9199
    },
    "singleProjectMode": true
  }
}
